<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsumoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="346dp"
            android:layout_height="245dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChart">>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonLamp0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp0"
                    android:text="LÂMPADA 0 ON/OFF" />

                <Button
                    android:id="@+id/buttonLamp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp1"
                    android:text="LÂMPADA 1 ON/OFF" />

                <Button
                    android:id="@+id/buttonLamp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp2"
                    android:text="LÂMPADA 2 ON/OFF" />

                <Button
                    android:id="@+id/buttonLamp3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp3"
                    android:text="LÂMPADA 3 ON/OFF" />

                <Button
                    android:id="@+id/buttonLamp4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp4"
                    android:text="LÂMPADA 4 ON/OFF" />

                <Button
                    android:id="@+id/buttonLamp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp5"
                    android:text="LÂMPADA 5 ON/OFF" />

                <Button
                    android:id="@+id/buttonLamp6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp6"
                    android:text="LÂMPADA 6 ON/OFF" />

                <Button
                    android:id="@+id/buttonLamp7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lamp7"
                    android:text="LÂMPADA 7 ON/OFF" />

                <Button
                    android:id="@+id/buttonDesligarTodos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lampDesligaTodos"
                    android:text="DESLIGAR TODOS" />

                <Button
                    android:id="@+id/buttonLigarTodos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="lampLigaTodos"
                    android:text="LIGAR TODOS" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textBemVindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="361dp"
            android:layout_height="248dp"
            android:layout_marginTop="58dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>